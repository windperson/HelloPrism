<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="HelloPrism.Views.MainPage"
             Title="MainPage">
    <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
        <Label Text="{Binding Title}" />
        <StackLayout>
            <Label Text="Name:"/>
            <Entry Text="{Binding LoginModel.Name}" Placeholder="enter name"/>
            <Label Text="Account:"/>
            <Entry Text="{Binding LoginModel.Account}" Placeholder="enter account"/>
            <Label Text="PW:"/>
            <Entry Text="{Binding LoginModel.Password}" IsPassword="True" Placeholder="enter password"/>
            <Button Text="Save" Command="{Binding SaveCommand}"/>
        </StackLayout>
        <StackLayout Orientation="Horizontal">
            <Label Text="Save login:"/>
            <Switch IsToggled="{Binding LoginModel.SaveLogin}"/>
        </StackLayout>
    </StackLayout>
</ContentPage>