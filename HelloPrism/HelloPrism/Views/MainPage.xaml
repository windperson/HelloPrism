<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             xmlns:Custom="clr-namespace:HelloPrism.CustomControl"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="HelloPrism.Views.MainPage"
             Title="MainPage">
    <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
        <Label Text="{Binding Title}" />

        <Entry Custom:AttachedEntry.EntryType="Email"/>
        <Entry Custom:AttachedEntry.EntryType="Phone"/>
        <Entry Custom:AttachedEntry.EntryType="Number"/>
        <Entry Custom:AttachedEntry.EntryType="None"/>
        <Entry Custom:AttachedEntry.EntryType="not valid value"/>
        <Label Custom:AttachedEntry.EntryType="not applicable UI">This is a Label</Label>

    </StackLayout>
</ContentPage>